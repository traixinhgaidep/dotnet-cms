@model List<Models.EF.Channel>


<div class="blog-sidebar-wrapper col-md-3">
    <div class="box box-primary box-solid collapsed-box">
        <div class="box-header with-border">
            <h3 class="box-title">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-bars"></i>
                </button>
            </h3>
        </div>
        <div class="box-body">
            <div class="blog-sidebar">
                <div class="blog-search">
                    <form method="get" action="https://rikkei.vn/news">
                        <div class="search-box">
                            <input class="search-input" name="search" value="" placeholder="Tìm kiếm ...">
                            <button type="submit" class="search-btn">
                                <i class="fa fa-search">
                                </i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="blog-category">
                    <div class="bc-header">
                        <strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Danh mục</font></font></strong>
                    </div>
                    <div class="bc-content">
                        <ul>
                            @foreach (var item in Model)
                            {
                                var url = "/Frontend/Channel/ListArticleByChannel/" + item.IDChannel;
                                <li>
                                    <a href="@url">
                                        <i class="fa fa-chevron-right bc-icon bc-element"></i> &nbsp;&nbsp;
                                        <span class="bc-text bc-element"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.Name</font></font></span>
                                    </a>
                                </li>
                            }                         
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

